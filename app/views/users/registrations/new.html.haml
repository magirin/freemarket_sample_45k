%h2 会員情報入力
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname, "ニックネーム"
    %br/
    = f.text_field :nickname, autofocus: true, placeholder: "例)メルカリ太郎"
  .field
    = f.label :email, "メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例) PC・携帯どちらでも可"
  .field
    = f.label :password, "パスワード"
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "(#{@minimum_password_length}文字以上)"
  .field
    = f.label :password_confirmation, "パスワード（確認）"
    %br/
    = f.password_field :password_confirmation, placeholder: "(#{@minimum_password_length}文字以上)"
  .field
    = f.label :kanji_name, "姓（全角）"
    %br/
    = f.text_field :kanji_name, name: "kanji_name[][last]", autofocus: true, placeholder: "例)山田"
  .field
    = f.label :kanji_name, "名（全角）"
    %br/
    = f.text_field :kanji_name, name: "kanji_name[][first]", autofocus: true, placeholder: "例)彩"
  .field
    = f.label :kana_name, "姓カナ（全角）"
    %br/
    = f.text_field :kana_name, name: "kana_name[][last]", autofocus: true, placeholder: "例)ヤマダ"
  .field
    = f.label :kana_name, "名カナ（全角）"
    %br/
    = f.text_field :kana_name, name: "kana_name[][first]", autofocus: true, placeholder: "例)アヤ"
  -# .field
  -#   = f.label :birth_of_date, "生年月日"
  -#   %br/
  -#   = f.date_select(:birth_of_date, use_month_numbers: true, date_separator: '　', end_year: 1900, start_year: Time.now.year, include_blank: true)
  .actions
    = f.submit "Sign up"
= render "users/shared/links"
